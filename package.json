{
  "name": "ai-photo-booth-desktop",
  "productName": "AI Photo Booth",
  "version": "1.0.0",
  "description": "Cabina fotográfica con IA para eventos - Transforma tus fotos con inteligencia artificial usando Google Gemini. Incluye 8 escenarios preconfigurados y 6 estilos artísticos.",
  "main": "electron/main.js",
  "type": "module",
  "author": {
    "name": "Mate Code",
    "email": "matecode@example.com",
    "url": "https://matecode.com"
  },
  "copyright": "© 2025 Mate Code. Todos los derechos reservados.",
  "license": "MIT",
  "homepage": "https://github.com/matecode/ai-photo-booth",
  "repository": {
    "type": "git",
    "url": "https://github.com/matecode/ai-photo-booth.git"
  },
  "keywords": [
    "ai",
    "photo-booth",
    "gemini",
    "electron",
    "react",
    "photo-editor",
    "eventos",
    "inteligencia-artificial"
  ],
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "preview": "vite preview",
    "electron": "electron .",
    "package:win": "vite build && electron-builder --win --x64",
    "package:mac": "vite build && electron-builder --mac",
    "package:linux": "vite build && electron-builder --linux"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "sharp": "^0.34.5",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.matecode.aiphotobooth",
    "productName": "AI Photo Booth",
    "copyright": "Copyright © 2025 Mate Code",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico",
      "publisherName": "Mate Code",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI Photo Booth",
      "license": "LICENSE",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeader": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.graphics-design",
      "type": "distribution"
    },
    "dmg": {
      "title": "AI Photo Booth ${version}",
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/icon.png",
      "category": "Graphics",
      "maintainer": "matecode@example.com",
      "vendor": "Mate Code",
      "synopsis": "Cabina fotográfica con IA",
      "description": "Transforma tus fotos con inteligencia artificial. Ideal para eventos y celebraciones."
    }
  }
}
